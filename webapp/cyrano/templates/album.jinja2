<html>
  <head>
    <title>Cyrano - {{ album.name }}</title>
    <link rel="stylesheet" href="/static/slides.css" type="text/css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
    <script src="/static/slides.jquery.js"></script>
    <script src="/static/slides.js"></script>
  </head>
  <body>
    <h1>{{ album.name }}</h1>
    <form action="/message/add" method="POST">
      <input type="hidden" name="album" value="{{ album.id }}"/>
      <label for="message-name">Name</label>
      <input type="text" name="name" id="message-name"/><br/>
      <label for="message-text">Message</label>
      <textarea name="text" id="message-text"></textarea><br/>
      <label for="message-url">YouTube URL</label>
      <input type="text" name="url" id="message-url"/>
      <input type="submit" value="Add"/>
    </form>

    <div id="slides">
      <div class="slides_container">
        {% for message in album.messages %}
        <div>
          <table>
            <tr>
              <td class="message-text">
                <p>{{ message.name }} say</p>
                <blockquote>{{ message.html_text()|safe }}</blockquote>
              </td>
              <td>
                <object width="560" height="315">
                  <param name="movie" value="https://www.youtube.com/v/{{ message.youtube_id }}?fs=1"></param>
                  <param name="allowFullScreen" value="true"></param>
                  <param name="allowScriptAccess" value="always"></param>
                  <embed src="https://www.youtube.com/v/{{ message.youtube_id }}?fs=1"
                         type="application/x-shockwave-flash"
                         allowfullscreen="true"
                         allowscriptaccess="always"
                         width="560" height="315">
                  </embed>
                </object>
              </td>
            </tr>
        </table>
        </div>
        {% endfor %}
      </div>
    </div>
  </body>
</html>
